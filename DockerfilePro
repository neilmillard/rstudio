FROM centos

RUN yum update -y
RUN yum install -y wget python-pip vim tmux curl git bzip2 epel-release
RUN yum install -y R unixODBC libxml2-devel libcurl-devel openssl-devel sssd-tools initscripts krb5-workstation krb5-libs krb5-auth-dialog
COPY install-packages.r /install-packages.r
RUN R -f /install-packages.r
RUN yum install -y wget python-pip vim tmux curl git bzip2
COPY requirements.txt /requirements.txt
RUN yum install -y enchant python-devel
RUN pip install -r /requirements.txt
EXPOSE 8787
RUN wget https://download2.rstudio.org/rstudio-server-rhel-pro-1.1.383-x86_64.rpm
RUN yum install -y --nogpgcheck rstudio-server-rhel-pro-1.1.383-x86_64.rpm
